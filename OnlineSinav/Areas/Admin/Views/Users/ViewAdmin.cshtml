@model OnlineSinav.ViewModels.ViewAdmin
@{
    ViewBag.Title = "ViewAdmin";
}
<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel">
            <h4><i class="fa fa-angle-right"></i> Adminler</h4><hr><table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th><i class="fa fa-user"></i> @Html.DisplayNameFor(z => z.firstname_lastname)</th>
                        <th class="hidden-phone"><i class="fa fa-power-off"></i> @Html.DisplayNameFor(z => z.school_number)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.allAdmins)
                    {
                        <tr>
                            <td>
                                <a href="basic_table.html#">@user.Name</a>
                            </td>
                            <td class="hidden-phone">@user.SchoolNumber</td>
                            <td>
                                <a href="@Url.Action("EditUser",new { user.id})" class="btn btn-xs btn-primary">Edit</a>
                                <a href="@Url.Action("Delete",new { user.id})" class="btn btn-xs btn-danger">Delete</a>
                                @*<button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button>
                                    <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /content-panel -->
    </div>
    <!-- /col-md-12 -->
</div>